MainInterface:



#: set Tools_y_hint 0.08
#: set Limit_Number 100
<MainInterface>:
    cols:3
    BoxLayout:
        orientation: "vertical"
        Label:
            text: f"Red: {int(Red_Slider.value)}%"
        Slider:
            min: 0
            max: 100
            id: Red_Slider
        Label:
            text: f"Green: {int(Green_Slider.value)}%"
        Slider:
            min: 0
            max: 100
            id: Green_Slider
        Label:
            text: f"Blue: {int(Blue_Slider.value)}%"
        Slider:
            min: 0
            max: 100
            id: Blue_Slider
        Label:
            text: f"Alpha: {int(Alpha_Slider.value)}%"
        Slider:
            min: 0
            max: 100
            value: 100
            id: Alpha_Slider
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            id: Canvas_Box
            canvas:
        BoxLayout:
            size_hint: 1,Tools_y_hint
            Button:
                text: "Rect"
                id: Rect_Button
                on_press: root.Set_Shape("Rectangle")
            Button:
                text: "Ellipse"
                id: Ellipse_Button
                on_press: root.Set_Shape("Ellipse")
            Button:
                text: "Line"
                id: Line_Button
                on_press: root.Set_Shape("Line")
            Button:
                text: "Circle"
                id: Circle_Button
                on_press: root.Set_Shape("Circle")
            Button:
                text: "Quad"
                id: Quad_Button
                on_press: root.Set_Shape("Quad")
            Button:
                text: "Triangle"
                id: Quad_Button
                on_press: root.Set_Shape("Triangle")
    BoxLayout:
        orientation: "vertical"
        Label:
            text: f"Width: {int(Width_Slider.value)}"
        Slider:
            min: 0
            max: Limit_Number
            value: 20
            id: Width_Slider
        Label:
            text: f"Line Thickness: {int(Thickness_Slider.value)}"
        Slider:
            min: 0
            max: Limit_Number
            value: 10
            id: Thickness_Slider
        Label:
            text: f"Height: {int(Height_Slider.value)}"
        Slider:
            min: 0
            max: Limit_Number
            value: 20
            id: Height_Slider
        Label:
            text: f"Radius: {int(Radius_Slider.value)}"
        Slider:
            min: 0
            max: Limit_Number
            value: 20
            id: Radius_Slider
        Label:
            text: f"Hollow: {Hollow_Checker.active}"
        Switch:
            id: Hollow_Checker
            active: False
        Button:
            text: "Clear"
            on_press: root.Clear_Canvas()