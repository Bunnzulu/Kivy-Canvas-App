MainInterface:



#: set Tools_y_hint 0.08
#: set Limit_Number 50
<MainInterface>:
    cols:3
    BoxLayout:
        orientation: "vertical"
        Label:
            text: f"Red: {int(Red_Slider.value)}%"
        Slider:
            min: 0
            max: 100
            id: Red_Slider
        Label:
            text: f"Green: {int(Green_Slider.value)}%"
        Slider:
            min: 0
            max: 100
            id: Green_Slider
        Label:
            text: f"Blue: {int(Blue_Slider.value)}%"
        Slider:
            min: 0
            max: 100
            id: Blue_Slider
        Label:
            text: f"Alpha: {int(Alpha_Slider.value)}%"
        Slider:
            min: 0
            max: 100
            id: Alpha_Slider
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            id: Canvas_Box
            canvas:
                Line:
                    circle: (self.center_x,self.center_y,10)
        BoxLayout:
            size_hint: 1,Tools_y_hint
            Button:
                text: "Rectangle"
                id: Rect_Button
                on_press: root.Set_Shape("Rectangle")
            Button:
                text: "Ellipse"
                id: Ellipse_Button
                on_press: root.Set_Shape("Ellipse")
            Button:
                text: "Line"
                id: Line_Button
                on_press: root.Set_Shape("Line")
    BoxLayout:
        orientation: "vertical"
        Label:
            text: f"Width: {int(Width_Slider.value)}"
        Slider:
            min: 0
            max: Limit_Number
            id: Width_Slider
        Label:
            text: f"Height: {int(Height_Slider.value)}"
        Slider:
            min: 0
            max: Limit_Number
            id: Height_Slider
        Label:
            text: f"Radius: {int(Radius_Slider.value)}"
        Slider:
            min: 0
            max: Limit_Number
            id: Radius_Slider
        Label:
            text: f"Hollow: {Hollow_Checker.active}"
        Switch:
            id: Hollow_Checker
            #on_active